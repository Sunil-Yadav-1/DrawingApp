<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/ib_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="small_button"
        android:src="@drawable/ic_bg_small"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ib_medium"/>
    <ImageButton
        android:id="@+id/ib_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="medium_button"
        android:src="@drawable/ic_bg_medium"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@id/ib_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ib_large"/>
    <ImageButton
        android:id="@+id/ib_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="large_button"
        android:src="@drawable/ic_bg_large"
        android:layout_margin = "50dp"
        app:layout_constraintTop_toBottomOf="@id/ib_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>