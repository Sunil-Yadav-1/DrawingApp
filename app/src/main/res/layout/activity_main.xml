<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <com.example.drawingapp.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_color_pallets"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/drawable_border_canvas"

        />
    <LinearLayout
        android:id="@+id/ll_color_pallets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bs_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/drawing_view"
    >

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:onClick="paintclicked"
            android:backgroundTint="@color/black"
            android:contentDescription="color_pallet"
            android:src="@drawable/color_pallet_normal"
            android:tag="@color/black" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:onClick="paintclicked"
            android:backgroundTint="@color/red"
            android:contentDescription="color_pallet"
            android:src="@drawable/color_pallet_normal"
            android:tag="@color/red" />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="paintclicked"
            android:src="@drawable/color_pallet_normal"
            android:layout_margin="2dp"
            android:backgroundTint="@color/yellow"
            android:contentDescription="color_pallet"
            android:tag="@color/yellow"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="paintclicked"
            android:src="@drawable/color_pallet_normal"
            android:layout_margin="2dp"
            android:backgroundTint="@color/skin"
            android:contentDescription="color_pallet"
            android:tag="@color/skin"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/color_pallet_normal"
            android:layout_margin="2dp"
            android:onClick="paintclicked"
            android:backgroundTint="@color/green"
            android:contentDescription="color_pallet"
            android:tag="@color/green"/>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/blue"
            android:onClick="paintclicked"
            android:contentDescription="color_pallet"
            android:src="@drawable/color_pallet_normal"
            android:tag="@color/blue"
            />
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@android:color/black"
            android:src="@drawable/color_pallet_normal"
            android:layout_margin="2dp"
            android:onClick="paintclicked"
            android:contentDescription="color_pallet"
            android:tag="@color/lollipop"/>
        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/color_pallet_normal"
            android:layout_margin="2dp"
            android:onClick="paintclicked"
            android:backgroundTint="@color/random"
            android:contentDescription="color_pallet"
            android:tag="@color/random"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/bs_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_brush"
        android:contentDescription="brushselector"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>